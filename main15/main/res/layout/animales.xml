<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/kkk"
    android:background="@mipmap/fonfoanimal"
    android:weightSum="1">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/ibtnzorro"
            android:layout_gravity="right"
            android:background="@mipmap/zorro"
            android:layout_height="121dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="159dp"
            android:layout_height="121dp"
            android:id="@+id/ibtnperro"
            android:background="@mipmap/perro"
            android:layout_alignTop="@+id/ibtnzorro"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Perro"
            android:id="@+id/textView4"
            android:textColor="#0f08ff"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/ibntchancho"
            android:layout_alignLeft="@+id/ibtnperro"
            android:layout_alignStart="@+id/ibtnperro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Aprende con los Animales"
            android:id="@+id/textView"
            android:textColor="#4f1455"
            android:textSize="35dp"
            android:textStyle="bold"
            android:enabled="false"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/ibtnperro"
            android:layout_alignEnd="@+id/ibtnperro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Zorro"
            android:id="@+id/textView5"
            android:layout_below="@+id/ibtnzorro"
            android:textColor="#0f08ff"
            android:textSize="35dp"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:id="@+id/ibntchancho"
            android:layout_below="@+id/textView5"
            android:background="@mipmap/chancho"
            android:layout_alignRight="@+id/ibtnzorro"
            android:layout_alignEnd="@+id/ibtnzorro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chancho"
            android:id="@+id/textView6"
            android:textColor="#0f08ff"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_below="@+id/ibntchancho"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibtnoveja"
            android:background="@mipmap/oveja"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/ibtnperro"
            android:layout_alignStart="@+id/ibtnperro"
            android:layout_above="@+id/textView6"
            android:layout_alignRight="@+id/ibtnperro"
            android:layout_alignEnd="@+id/ibtnperro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Oveja"
            android:id="@+id/textView7"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignLeft="@+id/ibtnoveja"
            android:layout_alignStart="@+id/ibtnoveja"
            android:textColor="#0f08ff"
            android:textSize="35dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>
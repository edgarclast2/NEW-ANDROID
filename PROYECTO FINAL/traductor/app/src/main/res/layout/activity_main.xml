<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@mipmap/fondo3">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnlanzart"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:background="@mipmap/fboton"
        android:onClick="lanzartraductor" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsonido"
        android:background="@mipmap/flechit"
        android:layout_above="@+id/btnlanzart"
        android:layout_toLeftOf="@+id/btnlanzart"
        android:layout_toStartOf="@+id/btnlanzart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los Animales..!!"
        android:id="@+id/btnanimales"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/boto"
        android:textColor="#ff1212"
        android:textStyle="bold"
        android:layout_alignRight="@+id/btnlanzart"
        android:layout_alignEnd="@+id/btnlanzart"
        android:onClick="lanzaranimales" />

</RelativeLayout>

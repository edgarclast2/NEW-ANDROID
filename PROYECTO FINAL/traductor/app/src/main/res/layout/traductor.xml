<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/fondo"
    android:background="@mipmap/fontr">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="INGRESE PALABRA A TRADUCIR:.."
        android:id="@+id/textView2"
        android:textColor="#0923ff"
        android:textStyle="normal|bold|italic"
        android:textSize="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:textSize="35dp"
        android:layout_above="@+id/btntraducir"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="#ffffff" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LA PALABRA TRADUCIDA ES:.."
        android:id="@+id/textView3"
        android:textColor="#0923ff"
        android:textStyle="normal|bold|italic"
        android:textSize="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:layout_weight="0.16"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et2"
        android:textSize="35dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_weight="-70"
        android:background="#ffffff"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/segundo">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:id="@+id/imageView"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/cholito1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:text="Traducir***"
            android:id="@+id/btntraducir"
            android:textSize="25dp"
            android:textStyle="normal|bold"
            android:textColor="#ffff1127"
            android:onClick="traducir"
            android:layout_above="@+id/btntraducir"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView"
            android:layout_gravity="left|bottom"
            android:background="@mipmap/boto" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:text="Guardar***"
            android:id="@+id/btnguardar"
            android:textSize="25dp"
            android:textStyle="normal|bold"
            android:textColor="#ffff1127"
            android:onClick="guardar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="121dp"
            android:layout_weight="0.17"
            android:layout_gravity="left|top"
            android:background="@mipmap/boto"/>
    </FrameLayout>


</LinearLayout>